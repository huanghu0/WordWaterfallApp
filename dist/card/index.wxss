.i-card {
  margin: 0 16px;
  margin-top:20rpx;
  font-size: 14px;
  overflow: hidden;
  position: relative;
  background: #fff;
  border: 1rpx solid #dddee1;
  border-radius: 5px;
}

.i-card-full {
  margin-top: 20rpx;
  border-left: none;
  border-right: none;
  border-radius: 0;
}

.i-card-header {
  display: flex;
  padding: 6px 16px;
  align-items: center;
}

.i-card-header-content {
  flex: 1;
  text-align: left;
}

.i-card-header-thumb {
  display: inline-block;
  width: 68px;
  height: 68px;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  font-size:20rpx;
  overflow: hidden;
  background-size: cover;
  vertical-align: middle;
}

.i-card-header-title {
  display: inline-block;
  vertical-align: middle;
  font-size: 17px;
  margin-left:35rpx;
  color: #1c2438;
}

.i-card-header-extra {
  flex: 1;
  text-align: left;
  font-size: 17px;
  color: #1c2438;
}

.i-card-body {
  position: relative;
  padding: 6px 16px;
  color: #495060;
  font-size: 15px;
}

.i-card-body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-top-width: 1px;
}

.i-card-footer {
  position: relative;
  padding: 6px 16px;
  color: #80848f;
  font-size: 14px;
}
